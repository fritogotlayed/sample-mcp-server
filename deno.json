{
  "tasks": {
    "dev:start": "deno run --allow-read --allow-write --allow-net --allow-env --watch main.ts",
    "prod:start": "deno run --allow-read --allow-write --allow-net --allow-env main.ts",
    "tool:check": "deno check . && deno lint && deno fmt --check",
    "tool:check:types": "deno check",
    "tool:test": "NODE_ENV=test deno test --allow-read --allow-write --allow-net --allow-env --fail-fast",
    "tool:test:coverage": "NODE_ENV=test deno task tool:test --coverage --clean && deno coverage --detailed"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "zod": "npm:zod@^4.0.17"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120
  }
}
